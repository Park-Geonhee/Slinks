<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
   android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/diary_card"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:background="@drawable/diary_card"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!--        장소 정보-->
        <LinearLayout
            android:id="@+id/place_info"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:orientation="horizontal"
            >


<!--            <ImageView-->
<!--                android:id="@+id/place_img"-->
<!--                android:layout_width="82dp"-->
<!--                android:layout_height="82dp"-->
<!--                android:src="@drawable/mash"-->
<!--                app:srcCompat="@drawable/mash" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/place_name"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_height="30dp"
                        android:fontFamily="@font/pretendard_extra_bold"

                        android:text="삼진가구"
                        android:textSize="18sp"

                        android:textColor="@color/grey60" />

                    <TextView
                        android:id="@+id/place_type"
                        android:fontFamily="@font/pretendard_medium"

                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:text="카페"
                        android:textSize="14sp"
                        android:textColor="@color/grey60" />


                </LinearLayout>

                <TextView
                    android:id="@+id/place_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="14sp"

                    android:text="인천 삼화군 강화읍 향나무 5번길" />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="280dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:id="@+id/diary_img"
                android:layout_marginHorizontal="20dp"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                android:src="@drawable/cakepang"/>

            <TextView

                android:id="@+id/diary_reg_time"
                android:layout_width="80dp"
                android:layout_height="36dp"

                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/black_background"
                android:paddingHorizontal="15dp"
                android:textSize="14sp"
                android:text="14:38"


                android:textAlignment="center"
                android:textColor="@color/sliknks_white" />

        </FrameLayout>


        <TextView
            android:id="@+id/diary_content"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:maxLines="6"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="16dp"
            android:text="오후에 햇빛을 받으면서 맛잇는 에스프레소 한잔.. 커피는 코로 마시는거다. 레트로와 섞여서 한 층더 갬성과 풍미가 더해지는것 같다.. :D "


            />


    </LinearLayout>

</LinearLayout>